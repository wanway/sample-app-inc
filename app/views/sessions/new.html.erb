<% provide(:title, "登陆") %>
<h1>登陆</h1>

<div class="row">
	<div class="span6 offset3">
	<%= form_for(:session, url: sessions_path) do |f| %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "登陆", class: "btn btn-large btn-primary" %>
	<% end %>
	<p>还未注册？<%= link_to "现在注册", signup_path %>
	</div>
</div>
